<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <% if !logged_in? %>
  <li>
    <%= link_to "Login", login_path %>
  </li>
  <li>
    <%= link_to "Register", register_path %>
  </li>
  <% end %>
 
<div class="btn-group nav_item">
  <%= link_to '', class: "btn btn-dropdown-toggle", "data-toggle" => "dropdown" do %>
    Categories <span class="caret"></span>
  <% end %>
  <ul class="dropdown-menu">
    <% Category.all.each do |category| %>
      <li>
        <%= link_to category.name, category_path(category)%>
      </li>
    <% end %>
  <% if logged_in? and admin? %>
    <li class="divider"></li>
    <li>
      <%= link_to new_category_path do %>
        <i class="icon-plus"></i> New Category 
      <% end %>
    </li>
  <% end %>
  </ul>
</div>


<div class="nav_item">
   <%= link_to "New Post", new_post_path, class: 'btn-success btn'%>
</div>

<% if logged_in? %>
  <div class="btn-group nav_item">
    <%= link_to '', class: "btn btn-dropdown-toggle", "data-toggle" => "dropdown" do %>
      <%= current_user.username %> <span class="caret"></span>
    <% end %>
  <ul class="dropdown-menu">
    <li>
      <%= link_to user_path(current_user) do %>
        <i class="fa fa-user"></i> Profile
      <% end %>
    </li>
    <li>
      <%= link_to edit_user_path(current_user) do %>
        <i class="fa fa-pencil-square-o"></i> Edit Profile
      <% end %>
    </li>
    <li class="divider"></li>
    <li>
      <%= link_to logout_path do %>
        <i class="fa fa-power-off"></i>   Logout
      <% end %>
    </li>

  </ul>
  </div>
<% end %>
