

<% if params[:type] == "Post"  %>
<% @post = Post.find_by(slug: params[:slug]) %>
$('#post_vote_<%= params[:slug] %>').html('<%= total_votes(@post) %>');
<% end %>

<% if params[:type] == "Comment" %>
<% @comment = Comment.find(slug: params[:slug])%>
$('#comment_vote_<%= params[:slug] %>').html('<%= total_votes(@comment) %>');
<% end %>