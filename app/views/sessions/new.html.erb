<%= render 'shared/head_content', title: "Login" %>

<%= form_tag '/login' do %>
  <div class="form-group">
  <%= label_tag 'username' %>
  <%= text_field_tag 'user[username]' %>
  </div>
  <div class="form-group">
  <%= label_tag 'password' %>
  <%= password_field_tag 'user[password]' %>
  </div>
  <%= submit_tag 'Login', class: 'btn btn-primary' %>

<% end %>