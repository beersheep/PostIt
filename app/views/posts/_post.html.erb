<% if logged_in? %>
  <div class="well span0 text-center">
    <%= link_to votes_path(vote: true, type: 'Post', id:post.id),  method: 'post', class: 'vote_link' do %>
      <%= fa_icon('chevron-up', class: vote_true(post) ? 'voted' : 'vote_buttons') %>
    <% end %>
      <h4><%= total_votes(post) %></h4>
    <%= link_to votes_path(vote: false, type: 'Post', id:post.id),  method: 'post', class: 'vote_link' do %>
      <%= fa_icon('chevron-down', class: vote_false(post) ? 'voted' : 'vote_buttons') %>
    <% end %>
  </div>
<% else %>
  <div class="well span0 text-center">
    <h4><%= total_votes(post) %></h4>
  </div>
<%end %>

<div class="well span10">
<%= render post.categories %>
  <h4><%= link_to post.title, fix_url(post.url) %></h4>    
   <p><%= post.description %></p>
    <p>
      <span class="quiet">Posted by <%= post.creator.username %> </span>
      <small> at <%= post.created_at %></small>
    </p>
  <small>
    <span><%= link_to "#{post.comments.size} comments", post_path(post) %></span>
  </small>
</div>
