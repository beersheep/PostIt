
<%= render 'shared/head_content', title: 'All Post' %>

<% @posts.each do |post| %>
  <div class="well">
    <%= render post.categories %>
    <h4><%= link_to post.title, post.url %></h4>    
    <p><%= post.description %></p>
      <p>
        <span class="quiet">Posted by <%= post.creator.username%></span>
        <small> at <%= post.created_at %></small>
      </p>
    <small><span><%= link_to "#{post.comments.size} comments", post_path(post) %></span></small>
  </div>
<% end %>